<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.followers">
    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#0f3443"
        android:id="@+id/myfollowersbar"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        android:layout_height="55dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Following"
            android:id="@+id/textView6"
            android:layout_alignTop="@+id/donereg"
            android:layout_toRightOf="@+id/donereg"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="80dp"
            android:layout_gravity="center|left"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_toEndOf="@+id/donereg" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next"
            android:background="@null"
            android:tint="#ffffff"
            android:src="@drawable/magnify"
            android:padding="10dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            />
    </android.support.v7.widget.Toolbar>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewfllowers"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_height="match_parent"
        android:layout_below="@+id/myfollowersbar"
        android:layout_alignParentBottom="true">
</android.support.v7.widget.RecyclerView>


</RelativeLayout>
