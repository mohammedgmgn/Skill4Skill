<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.knowesabout">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#0f3443"
        android:titleTextColor="#ffffff"
        android:id="@+id/mywelcomebar_two"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        android:layout_height="55dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/donereg"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/close"
                android:layout_gravity="bottom"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Knows about"
                android:id="@+id/textView6"
                android:layout_alignTop="@+id/donereg"
                android:layout_toRightOf="@+id/donereg"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:layout_gravity="bottom"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_toEndOf="@+id/donereg" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nexttoavailable"
                android:textColor="#ffffff"
                android:background="@null"
                android:text="next"
                android:src="@drawable/pencilicon"
                android:layout_marginLeft="90dp"
                />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewfeedback"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_height="300dp"
        android:layout_below="@+id/mywelcomebar_two"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

    </android.support.v7.widget.RecyclerView>




</RelativeLayout>
