<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeavailabletime"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:titleTextColor="#ffffff"
    app:titleTextColor="#ffffff"

    tools:context="sol.yackeen.skill4skill.activities.Welcome2">
    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#0f3443"
        android:titleTextColor="#ffffff"
        android:id="@+id/toolbaravailabletime"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        android:layout_height="55dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nexttwoavailabletime"
            android:textColor="#ffffff"
            android:background="@null"
            android:text="next"
            android:src="@drawable/go"
            android:padding="10dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            />
    </android.support.v7.widget.Toolbar>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewavailabletime"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_height="420dp"
        android:background="#ffffff"
        android:layout_marginTop="100dp"
        android:layout_above="@+id/addbtntwoavailabletime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/availabletime"
        android:textSize="20sp"
        android:textColor="#0f3443"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/textView4availabletime"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/addskillsetavailabletime"
        android:layout_alignParentBottom="true"
        android:background="@drawable/from_btn"
        android:layout_marginTop="35dp"
        app:layout_widthPercent="25%"
        android:padding="10dp"
        android:layout_toRightOf="@+id/spinner"
        android:layout_toEndOf="@+id/spinner"
        android:layout_below="@+id/recyclerViewavailabletime" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        app:layout_widthPercent="25%"
        android:layout_marginRight="15dp"
        android:layout_marginTop="35dp"

        android:layout_marginLeft="5dp"
        android:background="@drawable/from_btn"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/recyclerViewavailabletime"
        android:layout_toRightOf="@+id/addskillsetavailabletime"
        android:layout_alignRight="@+id/textView4availabletime"
        android:layout_alignEnd="@+id/textView4availabletime" />

    <Spinner
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_weight="0.17"
        android:entries="@array/days"
        android:layout_alignParentBottom="true"
        app:layout_widthPercent="25%"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/recyclerViewavailabletime" />

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_marginTop="5dp"

        android:background="@drawable/button_border"
        android:id="@+id/addbtntwoavailabletime"
        android:textSize="15sp"
        app:layout_widthPercent="25%"
        android:textColor="#ffffff"
        android:layout_marginBottom="15dp"
        android:paddingLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="From"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/fromtv"
        android:layout_alignBottom="@+id/addbtntwoavailabletime"
        android:layout_toRightOf="@+id/spinner"
        android:layout_toEndOf="@+id/spinner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="To"
        android:layout_marginRight="50dp"
        android:id="@+id/totv"
        android:layout_alignTop="@+id/fromtv"
        android:layout_alignRight="@+id/textView4availabletime"
        android:layout_alignEnd="@+id/textView4availabletime" />


</android.support.percent.PercentRelativeLayout>
