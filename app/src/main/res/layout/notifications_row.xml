<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/cardview_default_elevation"
    android:layout_height="80dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_imagenotifications"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:src="@drawable/me" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mohammed Mahmoud"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="left"
        android:id="@+id/profilenamenotifications"
        android:textColor="#13088b"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="wants to study android with you"
        android:textSize="12sp"
        android:padding="0dp"
        android:layout_gravity="left"
        android:id="@+id/notificationbody"
        android:layout_below="@+id/textView5"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="40dp"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:text="10 min ago"
    android:layout_marginTop="15dp"
    android:layout_marginRight="7dp"
    android:id="@+id/timenotifications"

    />
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right|bottom"
    android:src="@drawable/iconcheck"
    android:tint="@color/cardview_dark_background"
    android:layout_marginRight="2dp"
    android:id="@+id/checknotifications"
    />
</android.support.v7.widget.CardView>